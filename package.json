    "mysql": "^2.18.1",
    "request-promise": "^4.2.6"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.1",
    "@types/rewire": "^2.5.28",
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "request": "^2.88.2",
    "rewire": "^5.0.0",
    "rimraf": "^3.0.2",
    "should": "^13.2.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
